{
  "source": {
    "include": [
      "./src"
    ],
    "exclude": [
      "src/index.js",
      "src/index.esm.js"
    ],
    "includePattern": ".+\\.js(doc)?$",
    "excludePattern": "(^|\\/|\\\\)_" // _から始まるファイルを無視
  },
  "templates": {
    "applicationName": "phina-extensions",
    "cleverLinks": false,
    "monospaceLinks": false,
    "default": {
      "outputSourceFiles": true
    }
  },
  "opts": {
    "encoding": "utf8",
    "destination": "./docs/",
    "template": "./node_modules/@pixi/jsdoc-template",
    "private": false,
    "recurse": true
  }
}